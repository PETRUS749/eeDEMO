@page "/"


<PageTitle>Admin Dashboard</PageTitle>

<h3>eeCLOUD Powered Admin</h3>
<p class="text-muted">LattePanda IOTA demo — remote configuration & telemetry</p>

<div class="row g-3 mt-2">
    <div class="col-12 col-md-6 col-xl-4">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">Devices</h5>
                <p class="card-text text-muted">
                    Browse registered devices and check last reported state.
                </p>
                <a class="btn btn-primary" href="/devices">Open</a>
            </div>
        </div>
    </div>

    <div class="col-12 col-md-6 col-xl-4">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">Publish Config</h5>
                <p class="card-text text-muted">
                    Publish desired configuration for a device or a group.
                </p>
                <a class="btn btn-primary" href="/config/publish">Open</a>
            </div>
        </div>
    </div>

    <div class="col-12 col-md-6 col-xl-4">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">About / Demo</h5>
                <p class="card-text text-muted">
                    Quick steps to run the demo and see rollout confirmation.
                </p>
                <a class="btn btn-outline-primary" href="/about">Open</a>
            </div>
        </div>
    </div>
</div>